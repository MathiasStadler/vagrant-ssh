{
    // Basic settings: turn linter(s) on
    "ruby.lint": {
        "reek": true,
        "rubocop": true,
        "ruby": true, //Runs ruby -wc
        "fasterer": true,
        "debride": true,
        "ruby-lint": true
    },
    "cSpell.enabled": true,
    "cSpell.enabledLanguageIds": [
        "c",
        "cpp",
        "csharp",
        "go",
        "handlebars",
        "javascript",
        "javascriptreact",
        "json",
        "jsonc",
        "latex",
        "markdown",
        "php",
        "plaintext",
        "python",
        "restructuredtext",
        "ruby",
        "text",
        "typescript",
        "typescriptreact",
        "yml",
        "shellscript"
    ],
    "cSpell.words": [
        "VIRTUALBOX",
        "Vargrantfile",
        "disksize",
        "dpkg",
        "hostkey",
        "keypair",
        "markdownlint",
        "proxyconf",
        "trapapa",
        "uuid",
        "vagrantfile",
        "vbguest",
        "base",
        "dhcp",
        "ecdsa",
        "forwarding",
        "getwd",
        "grep",
        "gsub",
        "intnet",
        "keyscan",
        "machinereadable",
        "modifyvm",
        "netmask",
        "nistp",
        "popen",
        "provisioners",
        "rbconfig",
        "rsync",
        "rubocop",
        "sha",
        "shellwords",
        "showvminfo",
        "userdir",
        "uuid",
        "vagrantfile",
        "vagranthosts",
        "virtualbox"
    ],
    "saveAndRun": {
        "commands": [
            {
                "match": "\\Vagrantfile$",
                "cmd": "echo 'Validate ${file}' && vagrant validate"
            },
            {
                "match": "\\.yml_disable$",
                "cmd": "ansible-playbook --syntax-check -i ${workspaceRoot}/test_inventory ${file}"
            },
            {
                "match": "\\.yml$",
                "cmd": "${workspaceRoot}/utils/ansibe_roles_syntax_check.sh ${file}"
            }
        ]
    }
}